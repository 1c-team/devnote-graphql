        "@types/node": "^20.0.0",
        "concurrently": "^8.2.2",
        "jest": "^29.0.3",
        "nodemon": "^3.0.0",
        "ts-jest": "^29.0.2",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "src"
        ],
        "globals": {
            "ts-jest": {
